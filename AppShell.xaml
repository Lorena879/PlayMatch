<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="PlayMatch.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:PlayMatch.Views"
    Shell.FlyoutBehavior="Disabled">

    <!-- BARRA INFERIOR -->
    <TabBar>

        <Tab Title="Inicio" Icon="home.png">
            <ShellContent Title="Inicio" Route="HomePage" ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>

        <Tab Title="Chats" Icon="chat.png">
            <ShellContent Title="Chats" Route="ChatsPage" ContentTemplate="{DataTemplate views:ChatsPage}" />
        </Tab>

        <Tab Title="Perfil" Icon="user.png">
            <ShellContent Title="Perfil" Route="ProfilePage" ContentTemplate="{DataTemplate views:ProfilePage}" />
        </Tab>

    </TabBar>

    <!-- Rutas para navegaciÃ³n a Login y Registro -->
    <ShellContent Route="LoginPage" ContentTemplate="{DataTemplate views:LoginPage}" />
    <ShellContent Route="RegisterPage" ContentTemplate="{DataTemplate views:RegisterPage}" />

</Shell>
