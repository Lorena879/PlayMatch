<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Colores principales -->
    <Color x:Key="PrimaryColor">#8A0240</Color>
    <Color x:Key="SecondaryColor">#D90452</Color>
    <Color x:Key="AccentColor">#F7C4D2</Color>

    <!-- Fondos -->
    <Color x:Key="BackgroundLight">#FFFFFF</Color>
    <Color x:Key="BackgroundGray">#F5F5F5</Color>

    <!-- Texto -->
    <Color x:Key="TextDark">#111111</Color>
    <Color x:Key="TextGray">#666666</Color>
    <Color x:Key="TextLight">#FFFFFF</Color>
</ResourceDictionary>