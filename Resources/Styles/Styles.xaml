<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Estilo global para Pages -->
    <Style TargetType="ContentPage">
        <Setter Property="BackgroundColor" Value="{StaticResource BackgroundGray}" />
    </Style>

    <!-- Labels -->
    <Style TargetType="Label">
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="FontSize" Value="16" />
    </Style>

    <Style TargetType="Label" x:Key="TitleLabel">
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="FontSize" Value="24" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

    <!-- Botones principales -->
    <Style TargetType="Button">
        <Setter Property="CornerRadius" Value="20" />
        <Setter Property="HeightRequest" Value="50" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="BackgroundColor" Value="{StaticResource PrimaryColor}" />
    </Style>

    <!-- Tarjetas estilo Tinder -->
    <Style TargetType="Frame" x:Key="CardFrame">
        <Setter Property="CornerRadius" Value="16"/>
        <Setter Property="HasShadow" Value="True"/>
        <Setter Property="BackgroundColor" Value="White"/>
        <Setter Property="Margin" Value="10"/>
    </Style>

    <!-- Entradas -->
    <Style TargetType="Entry">
        <Setter Property="BackgroundColor" Value="White" />
        <Setter Property="TextColor" Value="{StaticResource TextDark}" />
        <Setter Property="PlaceholderColor" Value="{StaticResource TextGray}" />
        <Setter Property="HeightRequest" Value="45" />
    </Style>

</ResourceDictionary>
